<%- layout('layouts/main') %>

<section class="error-section">
    <div class="container">
        <div class="error-content">
            <div class="error-illustration">
                <span class="error-code">404</span>
                <i class="bi bi-search"></i>
            </div>
            
            <h1 class="error-title">P치gina no encontrada</h1>
            <p class="error-description">
                Lo sentimos, la p치gina que buscas no existe o ha sido movida.
            </p>
            
            <div class="error-suggestions">
                <h5>Quiz치s buscabas:</h5>
                <div class="suggestion-links">
                    <a href="/productos" class="suggestion-link">
                        <i class="bi bi-phone"></i>
                        <span>Productos</span>
                    </a>
                    <a href="/servicios" class="suggestion-link">
                        <i class="bi bi-tools"></i>
                        <span>Servicios</span>
                    </a>
                    <a href="/cursos" class="suggestion-link">
                        <i class="bi bi-mortarboard"></i>
                        <span>Cursos</span>
                    </a>
                    <a href="/contacto" class="suggestion-link">
                        <i class="bi bi-envelope"></i>
                        <span>Contacto</span>
                    </a>
                </div>
            </div>
            
            <div class="error-actions">
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house"></i> Volver al inicio
                </a>
                <button onclick="history.back()" class="btn btn-outline">
                    <i class="bi bi-arrow-left"></i> Volver atr치s
                </button>
            </div>
        </div>
    </div>
</section>

<style>
.error-section {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-8) 0;
}

.error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
}

.error-illustration {
    position: relative;
    margin-bottom: var(--space-6);
}

.error-code {
    font-size: 10rem;
    font-weight: 800;
    line-height: 1;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-hover) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0.3;
}

.error-illustration i {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 4rem;
    color: var(--text-primary);
}

.error-title {
    font-size: 2rem;
    margin-bottom: var(--space-3);
    color: var(--text-primary);
}

.error-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
}

.error-suggestions {
    margin-bottom: var(--space-6);
    padding: var(--space-4);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
}

.error-suggestions h5 {
    margin-bottom: var(--space-3);
    color: var(--text-secondary);
}

.suggestion-links {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
}

.suggestion-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3);
    color: var(--text-primary);
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
}

.suggestion-link:hover {
    background: var(--bg-tertiary);
    color: var(--accent);
}

.suggestion-link i {
    font-size: 1.5rem;
}

.error-actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
}
</style>