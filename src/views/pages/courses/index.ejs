<%- layout('layouts/main') %>

<!-- Hero Section -->
<section class="hero-section" style="padding: var(--space-12) 0;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="hero-title">Cursos de Reparación</h1>
                <p class="hero-subtitle mx-auto">
                    Aprende de expertos en la industria. Desde lo básico hasta técnicas avanzadas de microsoldadura.
                </p>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="row">
            <!-- Sidebar Filters -->
            <div class="col-lg-3 mb-4">
                <div class="card filter-sidebar">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
                    </div>
                    <div class="card-body">
                        <form action="/cursos" method="GET">
                            <!-- Search -->
                            <div class="mb-4">
                                <label class="form-label filter-title">
                                    <i class="bi bi-search"></i> Buscar
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       name="search" 
                                       placeholder="Buscar cursos..." 
                                       value="<%= filters?.search || '' %>">
                            </div>
                            
                            <!-- Level -->
                            <div class="mb-4">
                                <label class="form-label filter-title">
                                    <i class="bi bi-bar-chart"></i> Nivel
                                </label>
                                <select class="form-select" name="nivel">
                                    <option value="">Todos los niveles</option>
                                    <% if (typeof levels !== 'undefined') { %>
                                        <% levels.forEach(level => { %>
                                            <option value="<%= level %>" <%= filters?.nivel === level ? 'selected' : '' %>>
                                                <%= level.charAt(0).toUpperCase() + level.slice(1) %>
                                            </option>
                                        <% }); %>
                                    <% } else { %>
                                        <option value="principiante">Principiante</option>
                                        <option value="intermedio">Intermedio</option>
                                        <option value="avanzado">Avanzado</option>
                                    <% } %>
                                </select>
                            </div>
                            
                            <!-- Sort -->
                            <div class="mb-4">
                                <label class="form-label filter-title">
                                    <i class="bi bi-sort-down"></i> Ordenar
                                </label>
                                <select class="form-select" name="sort">
                                    <option value="">Relevancia</option>
                                    <option value="popular" <%= filters?.sort === 'popular' ? 'selected' : '' %>>Más populares</option>
                                    <option value="rating" <%= filters?.sort === 'rating' ? 'selected' : '' %>>Mejor valorados</option>
                                    <option value="price-asc" <%= filters?.sort === 'price-asc' ? 'selected' : '' %>>Precio: Menor a Mayor</option>
                                    <option value="price-desc" <%= filters?.sort === 'price-desc' ? 'selected' : '' %>>Precio: Mayor a Menor</option>
                                    <option value="newest" <%= filters?.sort === 'newest' ? 'selected' : '' %>>Más recientes</option>
                                </select>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Aplicar
                                </button>
                                <a href="/cursos" class="btn btn-outline">
                                    <i class="bi bi-x-circle"></i> Limpiar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <!-- Courses Grid -->
            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="section-title mb-1">
                            <i class="bi bi-mortarboard text-accent"></i> Cursos
                        </h2>
                        <p class="text-secondary mb-0">
                            <%= typeof courses !== 'undefined' ? courses.length : 0 %> cursos disponibles
                        </p>
                    </div>
                </div>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle"></i> <%= error %>
                    </div>
                <% } %>
                
                <% if (typeof courses === 'undefined' || courses.length === 0) { %>
                    <div class="empty-state">
                        <div class="empty-state-icon">
                            <i class="bi bi-mortarboard"></i>
                        </div>
                        <h3 class="empty-state-title">No se encontraron cursos</h3>
                        <p class="empty-state-text">Intenta cambiar los filtros de búsqueda</p>
                        <a href="/cursos" class="btn btn-primary">Ver todos los cursos</a>
                    </div>
                <% } else { %>
                    <div class="row g-4">
                        <% courses.forEach((course, index) => { %>
                            <div class="col-md-6">
                                <div class="card course-card h-100">
                                    <div class="card-img-wrapper">
                                        <i class="bi bi-mortarboard"></i>
                                        <% if (course.destacado) { %>
                                            <span class="card-badge">Popular</span>
                                        <% } else if (course.precio_oferta) { %>
                                            <span class="card-badge badge-sale">Oferta</span>
                                        <% } %>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex align-items-center gap-2 mb-3">
                                            <span class="level-badge <%= course.nivel %>">
                                                <%= course.nivel %>
                                            </span>
                                            <% if (course.calificacion_promedio > 0) { %>
                                                <span class="text-warning small">
                                                    <i class="bi bi-star-fill"></i>
                                                    <%= course.calificacion_promedio?.toFixed(1) %>
                                                </span>
                                            <% } %>
                                        </div>
                                        
                                        <h5 class="card-title"><%= course.titulo %></h5>
                                        
                                        <p class="text-muted small mb-3">
                                            <i class="bi bi-person"></i> <%= course.instructor %>
                                        </p>
                                        
                                        <p class="card-text">
                                            <%= course.descripcion_corta || (course.descripcion ? course.descripcion.substring(0, 100) + '...' : '') %>
                                        </p>
                                        
                                        <div class="d-flex justify-content-between align-items-center text-muted small mb-3">
                                            <span><i class="bi bi-clock"></i> <%= course.duracion_horas %>h</span>
                                            <span><i class="bi bi-people"></i> <%= course.total_estudiantes || 0 %> alumnos</span>
                                            <% if (course.total_lecciones) { %>
                                                <span><i class="bi bi-collection-play"></i> <%= course.total_lecciones %> lecciones</span>
                                            <% } %>
                                        </div>
                                        
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="card-price">$<%= (course.precio_oferta || course.precio).toFixed(2) %></span>
                                                <% if (course.precio_oferta) { %>
                                                    <span class="card-price-original">$<%= course.precio.toFixed(2) %></span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="d-grid gap-2">
                                            <a href="/cursos/<%= course.slug %>" class="btn btn-outline">
                                                <i class="bi bi-info-circle"></i> Ver contenido
                                            </a>
                                            <form action="/cart/add" method="POST" class="add-to-cart-form">
                                                <input type="hidden" name="id" value="<%= course.id_curso %>">
                                                <input type="hidden" name="type" value="curso">
                                                <button type="submit" class="btn btn-primary w-100">
                                                    <i class="bi bi-cart-plus"></i> Comprar curso
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

<!-- Why Learn Section -->
<section class="section section-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">¿Por qué aprender con nosotros?</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-award"></i>
                        </div>
                        <h5>Instructores Expertos</h5>
                        <p class="text-secondary mb-0">Aprende de técnicos certificados con años de experiencia en el campo.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-infinity"></i>
                        </div>
                        <h5>Acceso de por Vida</h5>
                        <p class="text-secondary mb-0">Compra una vez, aprende para siempre. Accede cuando quieras.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-patch-check"></i>
                        </div>
                        <h5>Certificado Incluido</h5>
                        <p class="text-secondary mb-0">Obtén un certificado de finalización para validar tus conocimientos.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>