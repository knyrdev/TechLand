<%- layout('layouts/main') %>

<section class="section" style="min-height: 80vh; display: flex; align-items: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card">
                    <div class="card-body p-5">
                        <!-- Header -->
                        <div class="text-center mb-5">
                            <div class="feature-icon mb-3" style="margin: 0 auto;">
                                <i class="bi bi-person-circle"></i>
                            </div>
                            <h2 class="mb-2">Bienvenido</h2>
                            <p class="text-secondary">Inicia sesión en tu cuenta</p>
                        </div>
                        
                        <!-- Error Message -->
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-circle"></i> <%= error %>
                            </div>
                        <% } %>
                        
                        <!-- Login Form -->
                        <form action="/auth/login" method="POST">
                            <input type="hidden" name="redirect" value="<%= typeof redirect !== 'undefined' ? redirect : '/' %>">
                            
                            <div class="mb-4">
                                <label for="email" class="form-label">Correo electrónico</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input type="email" 
                                           class="form-control" 
                                           id="email" 
                                           name="email" 
                                           placeholder="tu@email.com" 
                                           required 
                                           autocomplete="email">
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <label for="password" class="form-label">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input type="password" 
                                           class="form-control" 
                                           id="password" 
                                           name="password" 
                                           placeholder="••••••••" 
                                           required
                                           autocomplete="current-password">
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="remember" name="remember">
                                    <label class="form-check-label text-secondary" for="remember">
                                        Recordarme
                                    </label>
                                </div>
                                <a href="/auth/forgot-password" class="text-accent small">
                                    ¿Olvidaste tu contraseña?
                                </a>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                                </button>
                            </div>
                        </form>
                        
                        <!-- Divider -->
                        <div class="text-center mb-4">
                            <span class="text-muted small">o continúa con</span>
                        </div>
                        
                        <!-- Social Login (placeholder) -->
                        <div class="d-grid gap-2 mb-4">
                            <button type="button" class="btn btn-outline" disabled>
                                <i class="bi bi-google"></i> Google
                            </button>
                        </div>
                        
                        <!-- Register Link -->
                        <div class="text-center">
                            <p class="text-secondary mb-0">
                                ¿No tienes cuenta? 
                                <a href="/auth/register" class="text-accent">Regístrate aquí</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>